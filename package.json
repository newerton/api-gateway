{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "A microservice with nest framework, typeorm, apache kafka and kubernetes.",
  "license": "MIT",
  "author": "Newerton Vargas de Araujo",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/unit/jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --silent --config ./test/unit/jest.config.ts",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest.config.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/axios": "3.0.1",
    "@nestjs/common": "11.0.16",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.4.3",
    "@nestjs/mapped-types": "2.0.4",
    "@nestjs/microservices": "10.3.0",
    "@nestjs/platform-express": "10.4.15",
    "@nestjs/swagger": "7.4.2",
    "bcrypt": "5.1.1",
    "body-parser": "1.20.3",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "env-var": "7.4.1",
    "helmet": "7.1.0",
    "kafkajs": "2.2.4",
    "keycloak-connect": "23.0.4",
    "lightship": "9.0.3",
    "nest-keycloak-connect": "1.9.5",
    "rxjs": "7.8.1",
    "swagger-themes": "1.2.30",
    "swagger-ui-express": "5.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.3.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.105",
    "@swc/jest": "0.2.31",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.6",
    "@types/csurf": "1.11.5",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.5",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "prettier": "3.2.4",
    "supertest": "6.3.4",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  }
}
