{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "A microservice with nest framework, typeorm, apache kafka and kubernetes.",
  "license": "MIT",
  "author": "Newerton Vargas de Araujo",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/unit/jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --silent --config ./test/unit/jest.config.ts",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest.config.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/axios": "4.0.0",
    "@nestjs/common": "11.1.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.1",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/microservices": "11.1.1",
    "@nestjs/platform-express": "11.1.1",
    "@nestjs/swagger": "11.2.0",
    "bcrypt": "6.0.0",
    "body-parser": "2.2.0",
    "cookie-parser": "1.4.7",
    "csurf": "^1.11.0",
    "env-var": "7.5.0",
    "helmet": "8.1.0",
    "kafkajs": "2.2.4",
    "keycloak-connect": "26.1.1",
    "lightship": "9.0.3",
    "nest-keycloak-connect": "2.0.0-alpha.1",
    "rxjs": "7.8.2",
    "swagger-themes": "1.4.3",
    "swagger-ui-express": "5.0.1",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.1",
    "@swc/cli": "0.7.7",
    "@swc/core": "1.11.24",
    "@swc/jest": "0.2.38",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.8",
    "@types/csurf": "1.11.5",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.18",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "supertest": "7.1.1",
    "ts-jest": "29.3.3",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1"
  }
}
